<modules>
  <module type="keyinput" name="inputs"  verbose="0" key_start="0x104">
    <input device="/dev/input/event0"/>
    <setup interval="300" />
    <trigger text="Test knap" unit="" name="button" key_code="0x106" flags="nolog"/>
  </module>
  <module type="readfile" name="pt1000"  verbose="0" flags="nolog">
    <file path="/dev/adc00" name="temp1" text="Temperatur 1" unit="°C"
	  interval="1" calc="eeprom:adc00_calc#poly1:a0.105b-273" multiread="10"
	  max="100" min="-45" />
  </module>
  <module type="threshold" name="thr" verbose="0">
    <hysteresis min="32" max="34" name="temp1" vmax="0" vmin="1" 
		event="pt1000.temp1" text="Temperatur threshold" unit="./"/>
 </module>
  <module type="relay" name="relays" verbose="0">
    <output device="/sys/class/leds/relay_2/brightness"/>
    <listen event="thr.temp1"  />
  </module>
  <module type="relay" name="relays" verbose="0">
    <output device="/sys/class/leds/relay_3/brightness"/>
    <listen event="inputs.button"  />
  </module>
  <module type="accumulate" name="acc" interval="30" verbose="0" >
    <acc event="pt1000.*"/>
  </module>
</modules>
<!-- config: Temperatur styring for lampe med PT1000-føler i messingstang -->
